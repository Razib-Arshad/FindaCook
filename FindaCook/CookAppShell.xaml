<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FindaCook.CookAppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FindaCook.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>

        <Tab Title="Dashboard" Icon="dashboard.png">
            <ShellContent
           Title="Dashboard"
           ContentTemplate="{DataTemplate local:DashboardPage}"
           Route="DashboardPage" />
        </Tab>

        <Tab Title="Manage Orders" Icon="orders.png">
            <ShellContent
                Title="Manage Orders"
                ContentTemplate="{DataTemplate local:ManageOrdersPage}"
                Route="ManageOrdersPage"
                />
        </Tab>

        <Tab Title="Profile" Icon="profile.png">
            <ShellContent
           Title="Profile"
           ContentTemplate="{DataTemplate local:CookProfilePage}"
           Route="CookProfilePage"
           />
        </Tab>

    </TabBar>
</Shell>
