<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FindaCook.Views.OrderLists"
             xmlns:viewModels="clr-namespace:FindaCook.ViewModels"
             Title="OrderLists">
    <ScrollView>
        <StackLayout Padding="10">
            <CollectionView ItemsSource="{Binding ClientOrders}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Orientation="Horizontal" Padding="5">
                            <!-- Ensure that these bindings refer to properties of ClientOrder -->
                            <Label Text="{Binding ItemCount}" WidthRequest="50"/>
                            <Label Text="{Binding ItemName}" HorizontalOptions="StartAndExpand"/>
                            <Label Text="{Binding ItemPrice}" HorizontalOptions="End"/>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>
