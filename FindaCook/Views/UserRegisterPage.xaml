<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FindaCook.UserRegisterPage"
             xmlns:viewmodel="clr-namespace:FindaCook.Maui.ViewModels"
             x:DataType="viewmodel:UserRegistrationPageViewModel"
             Title="Register">
    <ScrollView>
    <StackLayout Padding="20">
        <Label Text="Register" FontSize="28" FontAttributes="Bold" HorizontalOptions="CenterAndExpand" Margin="0,20,0,20"/>

            <Entry Placeholder="Name" x:Name="NameEntry" Text="{Binding Name}" Margin="10,30,0,10"/>
            <Entry Placeholder="Email" x:Name="EmailEntry" Text="{Binding Email}" TextTransform="None" Margin="10,20,0,10"/>
            <Entry Placeholder="Password" x:Name="PasswordEntry" IsPassword="True" Text="{Binding Password}" Margin="10,20,0,10"/>
            <Entry Placeholder="Retype Password" x:Name="RetypePasswordEntry" IsPassword="True" Text="{Binding RetypePassword}" Margin="10,20,0,20"/>

            <Button Text="Register" Command="{Binding RegisterCommand }" HorizontalOptions="CenterAndExpand" Margin="0,20,0,0"/>

            <!--<Label x:Name="ResultLabel" Text="{Binding ResultMessage}" FontSize="16" TextColor="Red" HorizontalOptions="CenterAndExpand" Margin="0,10,0,0"/>-->
        </StackLayout>
    </ScrollView>
</ContentPage>