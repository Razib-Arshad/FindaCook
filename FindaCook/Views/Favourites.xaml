<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FindaCook.Favourites"
             xmlns:model="clr-namespace:FindaCook.Models"

              xmlns:vm="clr-namespace:FindaCook.ViewModels"
              x:DataType="vm:FavouriteViewModel" 
             Title="Favourites">

    <StackLayout Padding="10">
        <Label Text="Favourites" HorizontalOptions="Center" FontSize="40" FontAttributes="Bold" Margin="0,20"/>

        <CollectionView ItemsSource="{Binding FavouriteCooks}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:CookProfile">
                    <!-- Make sure the namespace is correctly defined -->
                    <Grid Margin="0,10">
                        <StackLayout Margin="110,0,0,0">
                            <Label Text="{Binding FirstName}" FontSize="Large" FontAttributes="Bold"/>
                            <Label Text="{Binding SkillsAndSpecialties}" FontSize="Small" Margin="0,5,0,0"/>
                        </StackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </StackLayout>
</ContentPage>
