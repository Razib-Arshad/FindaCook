        <ScrollView>
        <StackLayout>
            <!-- Header Section -->
            <StackLayout BackgroundColor="Orange" Padding="20,40,20,20" VerticalOptions="Start">
                <Label Text="Welcome to Find a Cook App" FontSize="38" TextColor="White" HorizontalOptions="CenterAndExpand" FontFamily="Times New Roman"/>
                <Label Text="DISCOVER OUR TALENTED CHEFS AND FIND THE SERVICES YOU ARE LOOKING FOR " FontSize="16" TextColor="White" HorizontalOptions="CenterAndExpand" Margin="0,10"/>
            </StackLayout>





            <StackLayout>
                <StackLayout Margin="20">
                    <Label Text="What are you looking for??" FontAttributes="Bold" FontSize="50" TextColor="Orange" FontFamily="Times New Roman" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Margin="0,10"/>
                </StackLayout>
                
                <StackLayout>
                <SearchBar Placeholder="Search Items..." 
               SearchCommand="{Binding SearchCommand}"
               Text="{Binding SearchText}"
               BackgroundColor="AliceBlue" 
               PlaceholderColor="Orange" 
               CancelButtonColor="Black" 
               Margin="20,0" 
               TextColor="Black"
               FontFamily="Times New Roman"/>
                </StackLayout>
            </StackLayout>
            
