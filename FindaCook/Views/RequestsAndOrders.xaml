<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FindaCook"
             x:Class="FindaCook.Views.RequestsAndOrders"

             Title="RequestsAndOrders">


    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Button Text="Requests" TextColor="White"  Command="{Binding RequestsClickedCommand}" BackgroundColor="Orange" />
            <Button Text="Orders" TextColor="White"  Command="{Binding OrdersClickedCommand}" BackgroundColor="Orange" />

        </HorizontalStackLayout>
        <StackLayout>
            <ListView ItemsSource="{Binding DisplayedData}"
                  IsPullToRefreshEnabled="true"
                  RefreshCommand="{Binding RequestsClickedCommand}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <!-- Define how each item should be displayed -->
                        <TextCell Text="{Binding Price}" Detail="{Binding Price}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>